<!-- Spells -->
        <section class="page-section bg-primary" id="spells">
            <div class="container px-4 px-lg-5">
                <h2 class="text-center mt-0">Blue Magic Spells</h2>
                <hr class="divider" />
                <!-- Begin spellbook table -->
                    <div class="table-responsive">
                        <table class="table table-hover table-bordered">
                            <thead class="thead-light">
                                <tr>
                                    <th scope="col">ID</th>
                                    <th scope="col">Name</th>
                                    <th scope="col">Description</th>
                                    <th scope="col">Point Cost</th>
                                    <th scope="col">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each spells}}
                                <tr>
                                    <td scope="row">{{ id }}</td>
                                    <td scope="row">{{ name }}</td>
                                    <td scope="row">{{ description }}</td>
                                    <td scope="row">{{ point_cost }}</td>
                                    <td scope="row">
                                        <a href="/spells/add/{{ id }}" class="btn btn-primary btn-sm">Add</a>
                                    </td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>

                    <!-- Begin myspells table -->
                    <div class="table-responsive">
                        <table class="table table-hover table-bordered">
                            <thead class="thead-light">
                                <tr>
                                    <th scope="col">ID</th>
                                    <th scope="col">Name</th>
                                    <th scope="col">Description</th>
                                    <th scope="col">Point Cost</th>
                                    <th scope="col">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each myspells}}
                                <tr>
                                    <td scope="row">{{ id }}</td>
                                    <td scope="row">{{ name }}</td>
                                    <td scope="row">{{ description }}</td>
                                    <td scope="row">{{ point_cost }}</td>
                                    <td scope="row">
                                        <a href="/spells/remove/{{ id }}" class="btn btn-danger btn-sm">Remove</a>
                                    </td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>

            </div>
        </section>